<div class="page-header">
  <%= link_to new_checkin_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Checkin
  <% end %>
  <h1>Listing checkins</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Checkin date</th>
        <th>Admin tools</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @checkins) do |checkin| %>
        <td><%= link_to "#{checkin.user.username} (#{checkin.user_id})" %></td>
        <td><%= checkin.created_at.strftime("%e %B, %Y") %></td>
        <td><div class="btn-group" role="group" aria-label="Edit"><%= link_to 'Show', checkin, class: 'btn btn-default btn-sm' %> <%= link_to 'Edit', edit_checkin_path(checkin), class: 'btn btn-warning btn-sm' %> <%= link_to 'Destroy', checkin, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      <% end %>
    </tbody>
  </table>
</div>
