<h1>Listing pages</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Permalink</th>
        <th>Body</th>
        <% if user_signed_in? and current_user.is_admin? %>
          <th>Admin</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= link_to page.title, page %></td>
          <td><%= page.permalink %></td>
          <td><%= page.body %></td>
          <% if user_signed_in? and current_user.is_admin? %>
            <td><%= link_to 'Show', page, class: 'btn btn-default btn-sm' %> <%= link_to 'Edit', edit_page_path(page), class: 'btn btn-warning btn-sm' %> <%= link_to 'Destroy', page, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="form-actions">
  <% if user_signed_in? %>
    <%= link_to 'New Page', new_page_path, class: 'btn btn-primary' %>
  <% end %>
</div>
